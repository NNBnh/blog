---
layout: layouts/default.njk
---

{% include "post/header.njk" %}

<div class="flex min-h-screen backdrop-blur-xl">
  <div class="hidden w-80 bg-base-200 bg-opacity-90 xl:block">
    <div class="sticky top-0 h-fit max-h-screen overflow-y-auto">
      {{ content | toc | safe }}
    </div>
  </div>
  <div class="w-full bg-base-100 bg-opacity-90">
    <div class="mt-16 mb-24 px-4">
      <main class="prose mx-auto min-w-0 max-w-3xl">
        {{ content | safe }}
      </main>
      <div class="mx-auto mt-32 max-w-3xl">
        <script
          src="https://giscus.app/client.js"
          data-repo="NNBnh/blog"
          data-repo-id="R_kgDOImRM7Q"
          data-category="Comments"
          data-category-id="DIC_kwDOImRM7c4CTBWV"
          data-mapping="specific"
          data-term="Blog post No.{{ page.fileSlug }}"
          data-strict="0"
          data-reactions-enabled="1"
          data-emit-metadata="0"
          data-input-position="top"
          data-theme="dark_dimmed"
          data-lang="{{ lang }}"
          data-loading="lazy"
          crossorigin="anonymous"
          async
        ></script>
      </div>
    </div>
  </div>
</div>
