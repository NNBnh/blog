<header
  class="hero min-h-[20rem] font-serif relative"
  {% if image %}
    style="background-image: url({% img image, 1280 %});"
  {% endif %}
>
  <div class="hero-overlay bg-opacity-75 shadow-inner"></div>
  <div class="hero-content text-center">
    <div class="my-16">
      <h1 class="text-2xl sm:text-4xl font-bold">{{ title | lang_string }}</h1>
      {% if description %}
        <p class="mt-4 sm:text-lg font-semibold">{{ description | lang_string }}</p>
      {% endif %}
    </div>
    <div
      class="
        absolute bottom-0 p-2 w-full
        md:flex items-end justify-between gap-4
        text-left sm:text-2xl
      "
    >
      <a href="{{ path | url }}">
        {% include "post/date.njk" %}
      </a>
      <p class="md:text-right font-mono">
        {% include "post/tags.njk" %}
      </p>
    </div>
  </div>
</header>
