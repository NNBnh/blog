---
layout: page/tag.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tags
  addAllPagesToCollections: true
eleventyComputed:
  title: "#{{ tag }}"
  description: "{{ tags_data[ tag | slugify ].description[ lang ] }}"
  image: "{{ tags_data[ tag | slugify ].image }}"
permalink: "{{ page.lang }}/tags/{{ tag | slugify }}/"