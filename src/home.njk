---
layout: layouts/home.njk
pagination:
  data: metadata.languages
  size: 1
  alias: lang
title:
  en: Home
  vi: Trang chủ
image: https://images.unsplash.com/photo-1570366583862-f91883984fde
permalink: "/{{ lang }}/"
---

<div class="hero-content flex-col md:flex-row md:gap-8 lg:gap-16">
  <a href="https://NNBnh.github.io">
    <img
      class="
        w-48 lg:w-64 aspect-square bg-base-100
        rounded-3xl duration-200 outline outline-2 outline-primary shadow-xl
        hover:scale-110 hover:rotate-6 hover:outline-8 hover:shadow-2xl
      "
      src="https://avatars.githubusercontent.com/u/43980777"
    />
  </a>
  <div class="flex flex-col items-center md:items-start gap-4">
    <h1 class="text-4xl lg:text-6xl font-bold">{{ metadata.author.name }}'s Blog</h1>
    <p class="py-2 text-xl font-semibold italic">{{ metadata.description }}</p>
    <div class="flex gap-4">
      <a class="btn btn-cool btn-primary" href="https://NNBnh.github.io">
        {% if lang == 'vi' %}
          Giới thiệu
        {% else %}
          About Me
        {% endif %}
      </a>
      <a class="btn btn-cool btn-secondary" href="https://github.com/NNBnh">
        {% if lang == 'vi' %}
          Các dự án
        {% else %}
          My Projects
        {% endif %}
      </a>
      <a class="btn btn-cool btn-accent" href="https://NNBnh.itch.io">
        {% if lang == 'vi' %}
          Các game
        {% else %}
          My Games
        {% endif %}
      </a>
    </div>
  </div>
</div>