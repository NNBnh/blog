---
layout: layouts/home.njk
pagination:
  data: metadata.languages
  size: 1
  alias: lang
title:
  en: Home
  vi: Trang chủ
image: https://images.unsplash.com/photo-1570366583862-f91883984fde
alpine: true
permalink: "/{{ lang }}/"
---

{% macro hover(over, away) %}
  :class="authorHover ? '{{ over }}' : '{{ away }}'"
{% endmacro %}

<div
  x-data="{ authorHover: false }"
  class="hero-content origin-[6rem_50%] flex-col font-serif duration-200 md:flex-row md:gap-8 lg:origin-[8rem_50%] lg:gap-16"
  {{ hover('md:rotate-6') }}
>
  <a
    href="{{ metadata.author.url }}"
    aria-label="About Me"
    @mouseover="authorHover = true"
    @mouseover.away="authorHover = false"
  >
    <img
      class="mb-4 aspect-square w-48 rounded-3xl bg-base-100 shadow-xl outline outline-2 outline-primary duration-200 md:mb-0 hover:md:rotate-0 lg:w-64 lg:hover:rotate-6 lg:hover:scale-110 lg:hover:shadow-2xl lg:hover:outline-8"
      src="https://codeberg.org/avatars/46ce1f9c36aeaf725cc13b3e99735120"
      alt="About Me"
    />
  </a>
  <div
    class="flex flex-col items-center gap-4 duration-200 md:items-start"
    {{ hover('md:translate-x-4 lg:translate-x-0') }}
  >
    <h1
      class="origin-left text-4xl font-bold duration-200 md:text-6xl"
      {{ hover('md:scale-150') }}
    >
      <span class="duration-200" {{ hover('md:text-accent md:font-black') }}>
        {{ metadata.author.name -}}
      </span><span
        class="duration-200" {{ hover('md:opacity-10 md:font-thin') }}
      >'s Blog</span>
    </h1>
    <p
      class="relative origin-left py-2 text-xl font-semibold italic duration-200"
      {{ hover('md:scale-125') }}
    >
      <span
        class="absolute top-2 hidden text-secondary opacity-0 duration-200 md:inline"
        {{ hover('md:opacity-100', '') }}
      >{{ metadata.author.description }}</span>
      <span class="duration-200" {{ hover('md:opacity-0', '') }}>
        {{ metadata.description }}
      </span>
    </p>
    <div class="flex gap-4">
      <span class="origin-top-left duration-200" {{ hover('md:scale-125') }}>
        <a class="btn-cool btn-primary btn" href="{{ metadata.author.url }}">
          {% if lang == 'vi' %}Giới thiệu{% else %}About Me{% endif %}
        </a>
      </span>
      <a
        class="btn-cool btn-secondary btn"
        {{ hover('md:translate-x-6 md:-translate-y-2 md:opacity-10') }}
        href="https://codeberg.org/NNB"
      >
        {% if lang == 'vi' %}Các dự án{% else %}My Projects{% endif %}
      </a>
      <a
        class="btn-cool btn-accent btn"
        {{ hover('md:scale-75 md:translate-x-2 md:-translate-y-5 md:opacity-10') }}
        href="https://NNBnh.itch.io"
      >
        {% if lang == 'vi' %}Các game{% else %}My Games{% endif %}
      </a>
    </div>
  </div>
</div>
